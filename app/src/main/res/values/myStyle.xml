<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<style name="welcome" parent="Base.Theme.AppCompat.Light">-->
        <!--<item name="android:windowBackground">@drawable/ic_background</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->
    <style name="activityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="titleBar">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorLine</item>
        <item name="android:fitsSystemWindows">true</item>
         <item name="android:orientation">horizontal</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
         <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="backBu">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/ic_back</item>
    </style>
    <style name="WeatherIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="suggestion">
    <item name="android:textColor">@color/colorFont</item>
    <item name="android:textSize">13sp</item>
    </style>
    <style name="suggestion_horizontal_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="suggestion_image_big" >
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="suggestion_vertical_layout" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="now_small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="now_big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">45sp</item>
        <item name="android:gravity">end</item>
    </style>


    <style name="suggestion_text_view_big" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="suggestion_text_view_small" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="forecast_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="personal_layout">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="personal_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="personal_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="personal_go" >
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/ic_go</item>
    </style>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">1dp</item>
        <item name="android:background">#F2F2F2</item>
    </style>
    <style name="mline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">#E6E6E6</item>
    </style>
    <style name="MyButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#F2F2F2</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="login_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLine</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>